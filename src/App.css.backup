/* Estilos generales */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Comic Sans MS', 'Comic Neue', 'Comic Sans MS', cursive, sans-serif;
}

body {
  background-color: #f8f8f8;
  margin: 0;
  padding: 0;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.comic-container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  position: relative;
}

/* Estilos de la cabecera */
.comic-header {
  text-align: center;
  margin-bottom: 30px;
  position: relative;
}

.comic-speech {
  display: inline-block;
  background: white;
  padding: 15px 30px;
  border: 3px solid #000;
  border-radius: 20px;
  position: relative;
  box-shadow: 5px 5px 0 rgba(0, 0, 0, 0.2);
  transform: rotate(-2deg);
}

.comic-speech:before {
  content: '';
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  border-width: 20px 20px 0;
  border-style: solid;
  border-color: white transparent;
  z-index: 1;
}

.comic-speech:after {
  content: '';
  position: absolute;
  bottom: -25px;
  left: 50%;
  transform: translateX(-50%);
  border-width: 22px 22px 0;
  border-style: solid;
  border-color: black transparent;
  z-index: 0;
}

.comic-speech span {
  font-size: 1.8rem;
  font-weight: bold;
  color: #333;
  text-transform: uppercase;
  letter-spacing: 1px;
  text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
}

/* Estilos del panel principal */
.comic-main {
  min-height: 400px;
  position: relative;
  margin-bottom: 40px;
  perspective: 1000px;
}

.comic-panel {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 40px;
  border: 4px solid #000;
  border-radius: 10px;
  box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.2);
  transform-style: preserve-3d;
  backface-visibility: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.panel-content {
  max-width: 600px;
  margin: 0 auto;
}

.panel-emoji {
  font-size: 4rem;
  margin-bottom: 20px;
  display: inline-block;
  transform: rotate(5deg);
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0) rotate(5deg); }
  50% { transform: translateY(-10px) rotate(5deg); }
}

.comic-panel h1 {
  font-size: 2.5rem;
  margin-bottom: 20px;
  color: #333;
  text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
}

.comic-panel p {
  font-size: 1.5rem;
  line-height: 1.6;
  color: #444;
}

/* Navegación */
.comic-nav {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-bottom: 30px;
}

.nav-dot {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background-color: #ccc;
  border: 2px solid #000;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 0;
}

.nav-dot:hover {
  transform: scale(1.2);
}

.nav-dot.active {
  background-color: #ff4444;
  transform: scale(1.2);
}

/* Pie de página */
.comic-footer {
  text-align: center;
  padding: 20px;
  border-top: 3px dashed #000;
  margin-top: 40px;
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 15px;
}

.social-links a {
  color: #333;
  font-size: 1.8rem;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  transform: rotate(0deg);
}

.social-links a:hover {
  transform: rotate(10deg) scale(1.2);
  color: #ff4444;
}

.comic-copyright {
  font-size: 0.9rem;
  color: #666;
  margin-top: 15px;
}

/* Efectos de cómic */
.comic-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 30%, rgba(255,255,255,0.8), rgba(255,255,255,0) 25%),
              radial-gradient(circle at 80% 30%, rgba(255,255,255,0.8), rgba(255,255,255,0) 25%),
              radial-gradient(circle at 20% 80%, rgba(0,0,0,0.1), rgba(0,0,0,0) 25%),
              radial-gradient(circle at 80% 80%, rgba(0,0,0,0.1), rgba(0,0,0,0) 25%);
  pointer-events: none;
  border-radius: 5px;
}

/* Efecto de líneas de cómic */
.comic-panel::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 49%, rgba(0,0,0,0.1) 49%, rgba(0,0,0,0.1) 51%, transparent 51%),
              linear-gradient(0deg, transparent 49%, rgba(0,0,0,0.1) 49%, rgba(0,0,0,0.1) 51%, transparent 51%);
  background-size: 20px 20px;
  opacity: 0.3;
  pointer-events: none;
  border-radius: 5px;
}

/* Efecto de globo de diálogo */
.comic-speech::before {
  content: '';
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  border-width: 20px 20px 0;
  border-style: solid;
  border-color: white transparent;
  z-index: 1;
}

.comic-speech::after {
  content: '';
  position: absolute;
  bottom: -25px;
  left: 50%;
  transform: translateX(-50%);
  border-width: 22px 22px 0;
  border-style: solid;
  border-color: black transparent;
  z-index: 0;
}

/* Efecto de viñeta */
.comic-panel {
  position: relative;
  overflow: hidden;
}

.comic-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 10px solid #000;
  border-image: repeating-linear-gradient(45deg, transparent, transparent 10px, #000 10px, #000 20px) 10;
  pointer-events: none;
  border-radius: 5px;
}

/* Efecto de sombra de cómic */
.comic-panel {
  position: relative;
}

.comic-panel::after {
  content: '';
  position: absolute;
  bottom: -10px;
  right: -10px;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.1);
  z-index: -1;
  border-radius: 10px;
  transition: all 0.3s ease;
}

.comic-panel:hover::after {
  bottom: -15px;
  right: -15px;
}
